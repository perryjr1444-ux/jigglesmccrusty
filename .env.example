# ============================================================================
# AI SOC Environment Configuration Template
# ============================================================================
# This file serves as a template for the .env file
# Run ./scripts/bootstrap.sh to generate a .env file with secure secrets
# ============================================================================

# Database Configuration
POSTGRES_USER=aisoc
POSTGRES_PASSWORD=<generated-by-bootstrap>
POSTGRES_DB=aisoc
DATABASE_URL=postgresql://aisoc:<password>@postgres:5432/aisoc

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_GROUP_ID=ai-soc

# MinIO Configuration
MINIO_ROOT_USER=<generated-by-bootstrap>
MINIO_ROOT_PASSWORD=<generated-by-bootstrap>
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=ai-soc-artifacts

# Vault Configuration
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=<generated-by-bootstrap>

# AI SOC Service Configuration
AI_SOC_SERVICE_NAME=ai-soc
AI_SOC_KAFKA_BOOTSTRAP_SERVERS=kafka:9092
AI_SOC_KAFKA_GROUP_ID=ai-soc
AI_SOC_ALERTS_TOPIC=rbp.alerts
AI_SOC_QUOTA_UPDATES_TOPIC=rbp.quota_updates

# Telemetry Topics (read by AI SOC)
AI_SOC_TELEMETRY_TOPICS=rbp.metrics,rbp.proposals,rbp.approvals

# Threat Intelligence Feeds
AI_SOC_THREAT_INTEL_FEEDS=https://feeds.cve.org/,https://otx.alienvault.com/api/v1/indicators

# LLM Configuration
AI_SOC_LLM_MODEL=lumo-ai-soc
AI_SOC_LLM_ENDPOINT=

# Review Board Configuration
AI_SOC_REVIEW_BOARD_WEBHOOK=

# API Configuration
API_PORT=8000
API_KEY=<generated-by-bootstrap>
JWT_SECRET=<generated-by-bootstrap>

# Security
MASTER_KEY_PATH=/run/secrets/master_key.bin

# Logging
LOG_LEVEL=INFO

# TLS/SSL Configuration (optional)
TLS_ENABLED=false
TLS_CERT_PATH=/app/certs/server-cert.pem
TLS_KEY_PATH=/app/certs/server-key.pem
TLS_CA_PATH=/app/certs/ca-cert.pem

# Development/Production Mode
ENVIRONMENT=development
